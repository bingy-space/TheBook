<% layout('/layouts/boilerplate.ejs')%>


    <h1>Edit Book</h1>
    <form action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="book[title]" value="<%= book.title %>">
        </div>
        <div>
            <label for="location">Author</label>
            <input type="text" id="location" name="book[author]" value="<%= book.author %>">
        </div>
        <button>Update Book</button>
    </form>
    <a href="/books/<%= book._id %>">Back to Book</a>